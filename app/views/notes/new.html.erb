<%= turbo_frame_tag "modal" do %>
  <%= tag.dialog data: { action: "click->modal#close", modal_target: "dialog" }, class: "dialog", open: true do %>
    <div class="flex flex-col gap-2 shadow rounded bg-emerald-200 p-5 max-w-md mx-auto">
      <h1 class="font-bold text-4xl"><%= t(:new_) %></h1>
      <%= render "form", note: @note %>
    </div>
  <% end %>
<% end %>
